<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:elevation="32dp"
    tools:context=".List_Item_Gundam">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="21sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Gundam"
            android:textSize="21sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_pilot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pilot"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_persenjataan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persenjataan"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_fiturPeralatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fitur Peralatan"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_deskripsi_singkat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi Singkat"
            android:textSize="17sp"
            android:ellipsize="end"
            android:maxLines="2"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>